{
  "name": "helphub-local-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:client dev:server",
    "dev:client": "npm run dev --workspace client",
    "dev:server": "npm run dev --workspace server",
    "build": "npm-run-all build:server build:client",
    "build:client": "npm run build --workspace client",
    "build:server": "npm run build --workspace server",
    "lint": "npm-run-all lint:client lint:server",
    "lint:client": "npm run lint --workspace client --if-present",
    "lint:server": "npm run lint --workspace server"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/nodemailer": "^7.0.3",
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "nodemailer": "^7.0.10"
  }
}
